<h1>Listing translations</h1>

<table>
  <tr>
    <th>Message</th>
    <th>Language</th>
    <th>Context</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @translations.each do |translation| %>
  <tr>
    <td><%= translation.message_id %></td>
    <td><%= translation.language_id %></td>
    <td><%= translation.context_id %></td>
    <td><%= translation.content %></td>
    <td><%= link_to 'Show', translation %></td>
    <td><%= link_to 'Edit', edit_translation_path(translation) %></td>
    <td><%= link_to 'Destroy', translation, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

