<h1>Listing projects</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= link_to 'Show', project %></td>
    <td>
		<% if authorized? hash_for_edit_project_path %>
			<%=  link_to ts('edit.this'), edit_project_path(project) %> |
		<% end %>
		<%#= link_to 'Edit', edit_project_path(project) %>
	</td>
    <td>
		<% if authorized? hash_for_project_path(:action => 'destroy') %>
		<%=  link_to ts('delete.this'), project_path(project), :confirm => te('delete.confirmation'), :method => :delete %> 
		<% end %>
		<%#= link_to 'Destroy', project, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
	</td>
  </tr>
<% end %>
</table>

<br />

<% if authorized? hash_for_new_project_path %>
<%=  link_to ts('new.record', :what => Project.model_name.human), new_project_path %> 
<% end %>
